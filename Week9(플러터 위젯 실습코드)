<플러터의 주요 위젯 구조와 동작 방식 실습코드>

Column(
  mainAxisAlignment: MainAxisAlignment.center,
  children: [
    Container(
      color: Colors.red,
      width: 100,
      height: 40,
    ),
    const SizedBox(height: 10), // 위젯 사이 세로 간격
    Container(
      color: Colors.blue,
      width: 100,
      height: 40,
    ),
  ],
)


Row(
  mainAxisAlignment: MainAxisAlignment.center,
  children: [
    Container(
      color: Colors.red,
      width: 100,
      height: 40,
    ),
    const SizedBox(width: 10), // 위젯 사이 가로 간격
    Container(
      color: Colors.blue,
      width: 100,
      height: 40,
    ),
  ],
)


final _controller = ScrollController(); // 스크롤 제어용 컨트롤러

@override
Widget build(BuildContext context) {
  return Scaffold(
    body: SafeArea(
      child: Column(
        children: [
          SizedBox(height: 50),
          ElevatedButton(
            onPressed: () {
              _controller.jumpTo(330); // 버튼 클릭 시 스크롤을 330px 위치로 이동
            },
            child: const Text('3번 영역으로 이동'),
          ),
          Expanded(
            child: ListView(
              controller: _controller, // 컨트롤러 연결
              children: List.generate(
                10,
                (index) => Container(
                  width: 100,
                  height: 100,
                  margin: const EdgeInsets.all(5),
                  color: Colors.red.withAlpha((index + 1) * 25),
                  child: Center(child: Text(index.toString())),
                ),
              ),
            ),
          ),
        ],
      ),
    ),
  );
}




